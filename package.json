{
  "name": "pplink",
  "description": "Pseudo package link - extracted from lerna - create links to packages without symlinks",
  "version": "1.1.0",
  "bin": {
    "pplink": "./bin/pplink.js"
  },
  "dependencies": {
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "sort-keys": "^1.1.1",
    "update-package-json": "0.0.0"
  },
  "scripts": {
    "lint": "xo {lib,bin}/**/*.js *.js",
    "inspect": "jsinspect",
    "pretest": "npm run lint && npm run inspect",
    "test": "ava",
    "test-cov": "nyc ava",
    "posttest-cov": ""
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "author": "Jordan Klassen <forivall@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.11.0",
    "jsinspect": "^0.12.1",
    "nyc": "^5.5.0",
    "xo": "^0.12.1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:forivall/pplink.git"
  },
  "xo": {
    "space": 2,
    "rules": {
      "curly": [
        2,
        "multi-line",
        "consistent"
      ],
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "no-use-before-define": [
        1
      ],
      "no-nested-ternary": [
        0
      ]
    },
    "overrides": [
      {
        "files": "test/**",
        "esnext": true,
        "semicolon": false
      }
    ]
  }
}
